{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": ["ES2017", "DOM"],
    "jsx": "react",
    "paths": {
      "@webcarrot/react-speech": ["./src/index"],
      "@webcarrot/react-speech/*": ["./src/*"]
    }
  },
  "exclude": ["./dist/**/*"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}
